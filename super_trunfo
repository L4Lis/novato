#include <stdio.h>

int main(){
    //Definindo as variáveis
    char letra1;
    char codigo1[5], nome1[20];
    int populacao1, pontos1;
    float area1, pib1;
    
    //Coletando dados da primeira carta
    printf("Digite a letra do primeiro estado: \n");
    scanf(" %c", &letra1);

    printf("Digite o codigo do primeiro estado: \n");
    scanf("%s", codigo1);

    printf("Digite o nome da primeira cidade: \n");
    scanf("%s", nome1);

    printf("Digite a populacao da primeira cidade: \n");
    scanf("%d", &populacao1);

    printf("Digite a area da primeira cidade: \n");
    scanf("%f", &area1);

    printf("Digite o PIB da primeira cidade: \n");
    scanf("%f", &pib1);

    printf("Digite o numero de pontos turisticos da primeira cidade: \n");
    scanf("%d", &pontos1);

    //Definindo as variaveis da segunda carta
    char letra2;
    char codigo2[5], nome2[20];
    int populacao2, pontos2;
    float area2, pib2;

    //Coletando os dados da segunda carta
    printf("Digite a letra do segundo estado: \n");
    scanf(" %c", &letra2);

    printf("Digite o codigo do segundo estado: \n");
    scanf("%s", codigo2);

    printf("Digite o nome da segunda cidade: \n");
    scanf("%s", nome2);

    printf("Digite a populacao da segunda cidade: \n");
    scanf("%d", &populacao2);

    printf("Digite a area da segunda cidade: \n");
    scanf("%f", &area2);

    printf("Digite o PIB da segunda cidade: \n");
    scanf("%f", &pib2);

    printf("Digite o numero de pontos turisticos da segunda cidade: \n");
    scanf("%d", &pontos2);

    //Exibindo os dados da primeira carta
    printf("\nCarta 1\n");
    printf("Estado: %c\n", letra1);
    printf("Codigo: %s\n", codigo1);
    printf("Nome da cidade: %s\n", nome1);
    printf("Populacao: %d\n", populacao1);
    printf("Area: %.2f km²\n", area1);
    printf("PIB: %.2f bilhoes de reais\n", pib1);
    printf("Pontos turisticos: %d\n", pontos1);

    //Exibindo os dados da segunda carta
    printf("\nCarta 2\n");
    printf("Estado: %c\n", letra2);
    printf("Codigo: %s\n", codigo2);
    printf("Nome da cidade: %s\n", nome2);
    printf("Populacao: %d\n", populacao2);
    printf("Area: %.2f km²\n", area2);
    printf("PIB: %.2f bilhoes de reais\n", pib2);
    printf("Pontos turisticos: %d\n", pontos2);

    return 0;
}